<div id="header" class="col-full">
  <div id="logo">

    <a href="http://localhost:3000/" title="Ещё один сайт на WordPress"><%= image_tag('logo.png', :alt => 'Munik') %> </a>

    <h1 class="site-title"><a href="http://localhost/wordpress">Delegate</a></h1>
    <span class="site-description">Ещё один сайт на Munik</span>

  </div>
  <div id="lang">
    <%= language_selector %>
  </div>
  <div id="address">
    <ul>
      <li class="name">ОФ 'ГИИП'</li>
      <li class="street">г.Бишкек, Ахунбаева 129/б</li>
      <li class="telephone">(0312) 540440</li>
      <li class="email">giip@gipi.kg</li>

<div id="main" class="col-left box">
  <div id="orders_chart" style="width: 540px;">
    <script type="text/javascript" charset="utf-8">
        $(function() {
            new Highcharts.Chart({
                chart: {
                    renderTo: 'orders_chart',
                    defaultSeriesType: 'spline',
                    width: 538,
                    height: 240,
                    borderWidth: 1
                },
                xAxis: {
